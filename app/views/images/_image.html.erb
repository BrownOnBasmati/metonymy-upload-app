<% unless image.nil? %> 
    <div id="image_<%= image.id %>" class="image">
        <div style="float:left;padding:5px;" id="image[<%= image.id %>]">
        <%= link_to image_tag(image.url(:square)), image.url(:medium) %> |
        <%= link_to image_tag(image.url(:thumb)), image.url(:large) %> |
        <%= link_to 'show', image %>
        </div>
    </div>
<% end %>
