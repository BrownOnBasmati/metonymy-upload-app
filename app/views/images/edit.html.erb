<h1>Image (<%= @image.id %>)</h1>

<% form_for(@image) do |f| %>
<%= f.error_messages %>
<p>
<%= f.label :content_type %><br />
<%= f.text_field :content_type %>
</p>
<p>
<%= f.label :file_name %><br />
<%= f.text_field :file_name %>
</p>
<p>
<%= f.label :file_size %><br />
<%= f.text_field :file_size %>
</p>
<p>
<%= f.submit 'Update' %>
</p>
<% end %>

<div id="images" class="images">
    <%= render :partial => "image", :object => @image %>
</div>

<%= link_to 'Show', @image %> |
<%= link_to 'Back', images_path %>
